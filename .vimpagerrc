set noloadplugins
set nowrap
set readonly
set mouse +=a
if &term =~ '^screen'
    set ttymouse=xterm2
endif

function! Apropos()
    let word = expand("<cword>")
    exec "!apropos " . word . " | fzf | awk '{split($0,a,\"(\"); print a[1]}' | xargs man"
endfunction

let mapleader=" "  " Map <leader> to space

nnoremap <Leader>mn :execute '!man ' . expand("<cword>")<cr> " Show man page for current word
nnoremap <Leader>a :call Apropos()<cr>

" swap colon and single quote for easier commands
nnoremap ' :
nnoremap : '
vnoremap ' :
vnoremap : '
