menu-0-1 = log out
menu-0-1-exec = loginctl kill-session 1
menu-0-2 = lock
menu-0-2-exec = xsecurelock
menu-0-3 = sleep
menu-0-3-exec = xsecurelock -- systemctl suspend

menu-1-0 = power off
menu-1-0-exec = poweroff
menu-1-1 = cancel
menu-1-1-exec = #powermenu.close

