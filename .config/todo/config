# === EDIT FILE LOCATIONS BELOW ===

# Your todo.txt directory
export TODO_DIR="$HOME/.local/share/todo"
export TODO_CFG="$HOME/.config/todo"

# Your todo/done/report.txt locations
export TODO_FILE="$TODO_DIR/todo"
export DONE_FILE="$TODO_DIR/done"
export REPORT_FILE="$TODO_DIR/report"
export TMP_FILE="$TODO_DIR/todo.tmp"

# You can customize your actions directory location
export TODO_ACTIONS_DIR="$TODO_CFG/actions"

# == EDIT FILE LOCATIONS ABOVE ===

# === COLOR MAP ===

export GELATO_TINT='\\033[38;5;53m'
export GELATO_SECONDARY='\\033[38;5;132m'
export GELATO_TERTIARY='\\033[38;5;210m'
export GELATO_OTHER='\\033[38;5;115m'
export GELATO_PROJECT='\\033[38;5;244m'
export GELATO_CONTEXT='\\033[38;5;216m'

# === COLORS ===

export PRI_A=$GELATO_TINT       # color for A priority
export PRI_B=$GELATO_SECONDARY  # color for B priority
export PRI_C=$GELATO_TERTIARY   # color for C priority
export PRI_X=$GELATO_OTHER      # color unless explicitly defined

export COLOR_PROJECT=$GELATO_PROJECT
export COLOR_CONTEXT=$GELATO_CONTEXT

# export COLOR_DONE=$LIGHT_GREY

# === BEHAVIOR ===

