snippet class "metaclass" b
local ${1:classname} = {}

local function constructor()
	return setmetatable({}, $1)
end

function $1:__tostring()
	return "$1"
end

function $1:$0()
end

$1.__index = $1

return setmetatable({
}, {
	__call = function(_,  ...) return constructor(...) end
})
endsnippet

snippet sfmt "string.format()" w
string.format("$1", $0)
endsnippet
